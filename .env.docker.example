# ENotebook Docker Environment Configuration
# Copy this file to .env and update the values for your environment
# NEVER commit the .env file to version control!

# ============================================
# Database Configuration
# ============================================
POSTGRES_USER=enotebook
POSTGRES_PASSWORD=change_this_secure_password
POSTGRES_DB=enotebook
POSTGRES_PORT=5432

# ============================================
# Server Configuration
# ============================================
SERVER_PORT=4000
NODE_ENV=production

# CORS Origins (comma-separated list)
# Add your client URLs here
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# ============================================
# Security Secrets
# REQUIRED: Generate secure random strings before first run!
# Use: openssl rand -base64 32
# The server will refuse to start if these are left as placeholder values.
# ============================================
SESSION_SECRET=REPLACE_WITH_SESSION_SECRET_openssl_rand_base64_32
JWT_SECRET=REPLACE_WITH_JWT_SECRET_openssl_rand_base64_32

# ============================================
# Network Binding
# ============================================
# Bind to a specific interface (default: 0.0.0.0 = all interfaces)
# Example for a specific LAN IP: LISTEN_HOST=192.168.1.100
LISTEN_HOST=0.0.0.0

# Optional first-run admin seeding (applies only when no users exist)
SEED_DEFAULT_ADMIN=true
DEFAULT_ADMIN_USERNAME=Admin
# REQUIRED: Change this password on first login!
# Must be at least 12 characters and include uppercase, lowercase, number, and symbol.
DEFAULT_ADMIN_PASSWORD=ChangeMe!LocalAdmin2025
DEFAULT_ADMIN_EMAIL=admin@local
