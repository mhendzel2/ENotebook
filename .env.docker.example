# ENotebook Docker Environment Configuration
# Copy this file to .env and update the values for your environment
# NEVER commit the .env file to version control!

# ============================================
# Database Configuration
# ============================================
POSTGRES_USER=enotebook
POSTGRES_PASSWORD=change_this_secure_password
POSTGRES_DB=enotebook
POSTGRES_PORT=5432

# ============================================
# Server Configuration
# ============================================
SERVER_PORT=4000
NODE_ENV=production

# CORS Origins (comma-separated list)
# Add your client URLs here
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# ============================================
# Security Secrets
# Generate secure random strings for production!
# Use: openssl rand -base64 32
# ============================================
SESSION_SECRET=generate-a-secure-random-string-here
JWT_SECRET=generate-another-secure-random-string-here
